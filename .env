# Container prefix
CONTAINER_PREFIX=observability

# -------------------------
# InfluxDB (2.x)
# -------------------------
# Use a 2.+ image (adjust to the specific LTS tag you prefer)
INFLUXDB_IMAGE=influxdb:2.7
# Host IP to bind InfluxDB port to. Use 0.0.0.0 for all interfaces or a specific public IP.
INFLUXDB_BIND_IP=0.0.0.0
INFLUXDB_PORT=8086

# InfluxDB init settings (used on first startup)
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=admin123
INFLUXDB_ORG=myorg
INFLUXDB_BUCKET=my-bucket
# KEEP THIS SECRET. Use a secure long token.
INFLUXDB_TOKEN=supersecrettoken_here

# -------------------------
# Telegraf
# -------------------------
# Choose a Telegraf version compatible with InfluxDB 2.x (recommended 1.25+ / 1.26+ / 1.27+)
TELEGRAF_IMAGE=telegraf:1.27
# Path on host to your telegraf.conf (relative or absolute)
TELEGRAF_CONFIG=./telegraf.conf

# -------------------------
# Grafana
# -------------------------
# Choose a Grafana version that supports InfluxDB v2 datasource (Grafana 8+/9+)
GRAFANA_IMAGE=grafana/grafana:9.5.2
# Bind Grafana to localhost by default (local only). Set to 0.0.0.0 to expose.
GRAFANA_BIND_IP=127.0.0.1
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# -------------------------
# Convenience INFLUX_URL (used by some configs)
# -------------------------
# If services talk to InfluxDB via docker network, use http://influxdb:8086
INFLUX_URL=http://influxdb:8086
